@using Web_oglasnik.Models
@model Oglas
@{
    ViewBag.Title = "Detalji";
    Layout = "~/Views/Shared/_Layout.cshtml";

    string stanje = "";
    if (@Model.Stanje == "N")
    {
        stanje = "Novo";
    }
    else
    {
        stanje = "Rabljeno";
    }

}

<h2>@Model.Naslov</h2>

<hr />

<div class="row">
    <div class="col-md-2">
        <strong>Marka:</strong>
    </div>
    <div class="col-md-10">
        @Model.Marka
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Stanje:</strong>
    </div>
    <div class="col-md-10">
        @stanje
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Godište:</strong>
    </div>
    <div class="col-md-10">
        @Model.Godiste.
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Cijena:</strong>
    </div>
    <div class="col-md-10">
        @String.Format("{0:N0}", Convert.ToDecimal(Model.Cijena)) kn
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-2">
        <strong>Opis:</strong>
    </div>
    <div class="col-md-10">
        <pre style="white-space: pre-wrap">@Model.Opis</pre>
    </div>
</div>

<hr />

<div class="row">
    <div class="col-md-2">
        <strong>Korisnik:</strong>
    </div>
    <div class="col-md-10">
        @Html.ActionLink(Model.Username, "Detalji", "Korisnik", new { id = Model.ID_Korisnika }, null)
    </div>
</div>

<div class="row">
    <div class="col-md-2">
        <strong>Objavljen:</strong>
    </div>
    <div class="col-md-10">
        @Model.Datum
    </div>
</div>

<br />

@{
    int id = Convert.ToInt32(Session["ID"]);

    if (id == Model.ID_Korisnika)
    {
        @Html.ActionLink("Povratak na oglase", "Popis", "Oglas", null, new { @class = "btn btn-primary btn-sm" })
        @Html.ActionLink("Ažuriraj", "Azuriraj", new { id = Model.ID }, new { @class = "btn btn-warning btn-sm", style = "margin-left: 5px;" })
        @Html.ActionLink("Izbriši", "Brisi", new { id = Model.ID }, new { @class = "btn btn-danger btn-sm", style = "margin-left: 5px;" })
    }
    else
    {
        @Html.ActionLink("Povratak na oglase", "Popis", "Oglas", null, new { @class = "btn btn-primary btn-sm" })
    }
}